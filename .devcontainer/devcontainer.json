// Podman notes:
// - https://code.visualstudio.com/remote/advancedcontainers/docker-options#_podman
// - https://universal-blue.discourse.group/t/should-we-really-recommend-vscode-podman-as-supported/220/3
{
  "name": "Dev Container",
  "containerEnv": {
    // For Podman
    "HOME": "/home/dev"
  },
  //  For Podman
  "remoteUser": "dev",
  "capAdd": [
    // For C++
    "SYS_PTRACE"
  ],
  "securityOpt": [
    // For C++
    "seccomp=unconfined",
    // For Podman
    "label=disable"
  ],
	"customizations": {
		"vscode": {
			"extensions": [
        // BASE
        "DavidAnson.vscode-markdownlint",
        "charliermarsh.ruff",
        "cheshirekow.cmake-format",
        "cschlosser.doxdocgen",
        "docker.docker",
        "eamodio.gitlens",
        "jeff-hykin.better-cpp-syntax",
        // Clangd has better support for modules than cpptools-extension-pack
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-azuretools.vscode-docker",
        "ms-python.isort",
        "ms-python.mypy-type-checker",
        "ms-python.python",
        // "ms-vscode.cpptools-extension-pack",
        // Comment out these two if using cpptools-extension-pack
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools-themes",
        "nefrob.vscode-just-syntax",
        "tamasfe.even-better-toml",
        "usernamehw.errorlens",
        "vadimcn.vscode-lldb"

        // LLVM
        // "llvm-vs-code-extensions.vscode-mlir",

        // Rust
        // "rust-lang.rust-analyzer",

        // Python
        // "ktnrg45.vscode-cython",
        // "ms-toolsai.jupyter",

        // JavaScript
        // "denoland.vscode-deno",

        // Kubernetes
        // "ms-kubernetes-tools.vscode-kubernetes-tools",
        // "redhat.vscode-yaml",
      ]
		}
	},
  "build": {
    "dockerfile": "Containerfile"
  },
  "runArgs": [
    // For Podman
    "--userns=keep-id"
  ]
}
