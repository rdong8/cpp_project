FROM docker.io/fedora:latest

RUN \
  dnf update -y \
  && dnf install -y \
    @development-tools \
    cmake \
    clang \
    clang-tools-extra-devel \
    compiler-rt \
    doxygen \
    fish \
    gawk \
    helix \
    just \
    libcxx-devel \
    lldb \
    llvm \
    mold \
    ninja \
    uv \
    wget \
  && dnf clean all && rm -rf /var/cache/dnf

SHELL ["/bin/fish", "-c"]

RUN useradd -ms /bin/fish dev
USER dev
